# Environment Configuration

# MongoDB
MONGO_URI=mongodb://localhost:27017/ai-shorts
# Or use MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-shorts?retryWrites=true&w=majority

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Backend Server
PORT=5000
NODE_ENV=production
LOG_LEVEL=info

# TTS Engine (bark or elevenlabs)
TTS_ENGINE=elevenlabs

# ElevenLabs API (if using elevenlabs)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Image Generation API (a1111 or comfyui)
IMAGE_API_TYPE=a1111

# Automatic1111 API
A1111_API_URL=http://127.0.0.1:7860
A1111_STEPS=25
A1111_NEGATIVE_PROMPT=blurry, bad quality, distorted, ugly, watermark, text, signature

# ComfyUI API (alternative to A1111)
COMFYUI_API_URL=http://127.0.0.1:8188

# DigitalOcean Spaces (S3-compatible storage)
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
SPACES_REGION=nyc3
SPACES_BUCKET=your-bucket-name
SPACES_KEY=your_spaces_access_key
SPACES_SECRET=your_spaces_secret_key

# Frontend
NEXT_PUBLIC_API_URL=http://your-domain.com/api
